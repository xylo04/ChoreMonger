<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:orientation="vertical"
  android:layout_height="fill_parent"
  android:background="#4062F7">

<RelativeLayout 
	android:id="@+id/RelativeLayout01" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">

<TextView 
		android:id="@+id/TextView01" 
		android:layout_height="wrap_content" 
		android:text="Rewards Center" 
		android:textSize="@dimen/menu_title" 
		android:shadowDx="0" 
		android:shadowDy="0" 
		android:shadowRadius="10" 
		android:layout_width="wrap_content"
		android:layout_gravity="fill_horizontal|center" 
		android:layout_alignParentTop="true" 
		android:layout_centerHorizontal="true" 
		android:shadowColor="@color/menu_glow" 
		android:textColor="@color/menu_header"/>

<ImageView android:id="@+id/ImageView_LeftIcon" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/choresmonger">
	</ImageView>
	


</RelativeLayout>
<RelativeLayout
	android:id="@+id/RelativeLayout02" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content">
	
	<ListView
		android:id="@+id/ListView_Rewards_Center_Menu"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:divider="#FFF"
		android:dividerHeight="8px"
		android:listSelector="@drawable/textured">
	</ListView>
	
</RelativeLayout>
  
  
</LinearLayout>
