<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
 <TableLayout android:id="@+id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:stretchColumns="*">

	<TableRow android:id="@+id/TableRow01"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	
	<ImageView android:id="@+id/ImageView_LeftIcon" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:src="@drawable/choresmonger">
	</ImageView>
</TableRow>

	<TableRow android:id="@+id/TableRow02"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
<TextView 
		android:id="@+id/TextView01" 
		android:layout_height="wrap_content" 
		android:text="Reward Details"
		android:textSize="@dimen/menu_title" 
		android:shadowDx="0" 
		android:shadowDy="0" 
		android:shadowRadius="10" 
		android:layout_width="wrap_content"
		android:layout_gravity="fill_horizontal|center" 
		android:layout_alignParentTop="true" 
		android:layout_centerHorizontal="true" 
		android:shadowColor="@color/menu_glow" 
		android:textColor="@color/menu_header"/>

</TableRow>

	<TableRow android:id="@+id/TableRow03"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	
<TextView android:id="@+id/txviewRewardTitle"
			android:textColor="#FFF"
			android:text="Title:"
			android:textSize="10pt"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	/>	
			
<TextView android:id="@+id/txviewRewardTitleVal"
			android:textColor="#FFF"
			android:textSize="10pt"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	/>	
	
</TableRow>

	<TableRow android:id="@+id/TableRow04"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	
<TextView android:id="@+id/txviewRewardDescr"
			android:textColor="#FFF"
			android:text="Description:"
			android:textSize="10pt"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	/>	
			
<TextView android:id="@+id/txviewRewardDescrVal"
			android:textColor="#FFF"
			android:textSize="10pt"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	/>	
</TableRow>
  
  <TableRow android:id="@+id/TableRow05"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	
<TextView android:id="@+id/txviewRewardPoints"
			android:textColor="#FFF"
			android:text="Points:"
			android:textSize="10pt"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	/>	
			
<TextView android:id="@+id/txviewRewardPointsVal"
			android:textColor="#FFF"
			android:textSize="10pt"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"	/>	
</TableRow>
   
   <TableRow android:id="@+id/TableRow06"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	 
  <Button
    android:id="@+id/Button_Redeem_Reward"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Redeem Reward"></Button>
                    
   </TableRow>
   </TableLayout>
</LinearLayout>